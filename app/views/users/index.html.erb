
<h1>Listing users</h1>

<table class="table table-bordered">
  
  <tr>
    
    <th>Image</th>
    <th>Email</th>
    <th>Username</th>
    <th></th>
    <th>Actions</th>
    <th></th>
    
  </tr>

  <% @users.each do |user| %>
  
    <tr>
      <td><%= gravatar_image_tag(user.email) %></td>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_registration_path(user) %></td>
      <td><%= link_to "Delete", user, :method => :delete %></td>
    </tr>
  
  <% end %>

</table>

